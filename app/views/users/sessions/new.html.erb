<div class="login">
  <header>
    <nav>
      <div class="side">
        <%= image_tag "logo.png" %>
        <ul>
          <li>About</li>
          <li>Pricing</li>
          <li>Resources</li>
          <li>Support</li>
        </ul>
      </div>
      <div class="buttons">
        <%= link_to "Sign up", new_user_registration_path, class: "create"%>
      </div>
    </nav>
  </header>
  <main>
    <div class="left">
      <%= image_tag "login.png"%>
    </div>
    <div class="right">
      <div class="container">
        <div class="title">Log in</div>
        <div class="form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div id="alert"><%= alert %></div>
            <div class="field">
              <%= f.email_field :email, autocomplete: "email", placeholder: "Email address" %>
            </div>
            <div class="field">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field remember">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "Log in" %>
            </div>
            <%= link_to user_google_oauth2_omniauth_authorize_path, class: "google", method: :post do %>
              <%= image_tag "google.png" %> Continue with Google
            <% end %>
          <% end %>
          <%= render "users/shared/links"%>
        </div>
      </div>
    </div>
  </main>
</div>
