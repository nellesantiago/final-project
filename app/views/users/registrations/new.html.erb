<div class="sign-up">
  <header>
    <nav>
      <div class="side">
        <%= image_tag "logo.png" %>
        <ul>
          <li>About</li>
          <li>Pricing</li>
          <li>Resources</li>
          <li>Support</li>
        </ul>
      </div>
      <div class="buttons">
        <%= link_to "Log in", new_user_session_path, class: "create"%>
      </div>
    </nav>
  </header>
  <main>
    <div class="left">
      <%= image_tag "register.png"%>
    </div>
    <div class="right">
      <div class="container">
        <div class="title">Sign up</div>
        <div class="form">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="grid">
              <div class="left-field">
                <div class="field">
                  <%= f.text_field :username, placeholder: "Username" %>
                </div>
                <div class="field">
                  <%= f.text_field :first_name, placeholder: "First name" %>
                </div>
                <div class="field">
                  <%= f.text_field :last_name, placeholder: "Last name" %>
                </div>
              </div>
              <div class="right">
                <div class="field">
                  <%= f.email_field :email, autocomplete: "email", placeholder: "Email address" %>
                </div>
                <div class="field">
                  <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (minimum 6 characters)" %>
                </div>
                <div class="field">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
                </div>
                </div>
                </div>
                <div class="actions">
                  <%= f.submit "Create an account" %>
                </div>
                <%= link_to user_google_oauth2_omniauth_authorize_path, class: "google", method: :post do %>
                  <%= image_tag "google.png" %> Sign up with Google
                <% end %>
              <% end %>
              <%= render "users/shared/links" %>
            </div>
          </div>
        </div>
      </main>
    </div>

<% if alert.present? %>
<div class="alert">
  <div class="container">
    <div class="message">
      <%= image_tag "alert.png" %>
      <%= alert %>
    </div>
    <%= link_to "Close", new_user_registration_path(@post) %>
  </div>
</div>
<% end %>
